package com.nt.ApexonLogical;

public class SubArrayOfTwoSum {

	public static void main(String[] args) {
		
		int[] arr = {2,4,6,10, 2, 1};
		int k = 12;
		
		boolean result = findSubArrayOfSum(arr, k);
		System.out.println("SubArray of two sum::"+result);
	}
	
	public static void findSubArrayOfSum(int[] arr, int sum) {
		
		for(int i=0; i<arr.length; i++) {
			
			for(int j=i+1; j<arr.length; j++) {
				
				if(arr[i]+arr[j]==sum) {
					System.out.println("SumOfSubArry::"+sum);
					return true;
				}
			}
		}
		return false;
	}
}
